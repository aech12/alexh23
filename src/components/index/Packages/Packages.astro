---
import Card from './Card.astro'
---

<div class="py-8 sm:p-8 md:p-20 md:py-16 bg-sky-100">
  <div
    class="mx-auto max-w-6xl flex items-center flex-col sm:flex-row justify-center space-x-2 space-y-4 md:space-y-0 md:space-x-4"
  >
    <Card
      title="Hourly Hiring"
      classStyle="bg-white"
      listItems={['Custom Requests']}
      btnType="light-darkoutline"
      href="#projects"
    />
    <Card
      title="Project Based"
      classStyle="bg-white w-94"
      listItems={['Full-time availability', 'Websites, Apps, APIs', 'Milestones Based']}
      btnType="dark"
      href="#projects"
    />
    <Card
      title="Fiverr"
      classStyle="bg-white"
      listItems={['Multiple Gigs Available', 'Posible Personalization']}
      btnType="light-darkoutline"
      href="https://www.fiverr.com/alex_howez"
      openInNewTab={true}
    />
  </div>
</div>
