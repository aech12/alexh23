---
import projects from '@assets/json/projects.json'
import Container from '@components/common/Container.astro'
import ButtonLink from '@components/common/ButtonLink.astro'
import Project from './Project.astro'
import im from '../../../assets/img/projects/cat.jpg'
---

<!-- projects.items.map((item) => ()) -->
<Container classStyle="">
  <div class="py-10 w-full">
    <h2 class="mb-2 text-center text-xl md:text-4xl font-bold">Projects</h2>
    <ul class="my-8 grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3">
      <Project item={projects.items[0]} img={im} />
      <Project item={projects.items[1]} img={im} />
      <Project item={projects.items[2]} img={im} />
      <Project item={projects.items[3]} img={im} />
      <Project item={projects.items[4]} img={im} />
      <Project item={projects.items[5]} img={im} />
    </ul>
    <div class="w-full flex justify-center">
      <ButtonLink classStyle="">See More</ButtonLink>
    </div>
  </div>
</Container>
