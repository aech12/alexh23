---
import { Icon } from 'astro-icon'

export interface Props {
  text: string
  icon?: string
  href?: string
}
const {
  text,
  // icon,
  href,
} = Astro.props as Props
---

<style lang="css">
  [astro-icon] {
    fill: blue;
  }
</style>

<a
  href={href}
  target="_blank"
  rel="noreferrer noopener"
  class="flex justify-between bg-black hover:bg-blue-700 text-white font-bold text-lg p-4 py-2 w-64 rounded"
>
  <span>{text}</span>
  <span> <Icon name={'mdi:arrow-top-right'} width={25} height={25} class="inline" /></span>
</a>
