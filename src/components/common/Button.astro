---
export interface Props {
  classStyle?: string
  type?: 'main' | 'secondary'
}
const { classStyle, type = 'main' } = Astro.props as Props
let buttonStyle = ''

switch (type) {
  case 'main':
    buttonStyle = 'bg-blue-500 hover:bg-blue-700 text-white'
    break
  case 'secondary':
    buttonStyle = 'bg-gray-500 hover:bg-gray-700 text-white'
    break
}
---

<button class={`${buttonStyle} font-bold py-2 px-4 rounded ${classStyle}`}>
  <slot />
</button>
