---
export interface Props {
  classStyle?: string
  level?: 'h1' | 'h2' | 'h3'
  type?: 'main' | 'secondary' | 'dark' | 'light' | 'invis'
}
const { classStyle, type = 'main', level = 'h1' } = Astro.props as Props
let style = ''

switch (type) {
  case 'main':
    style =
      'mb-2 text-center text-xl md:text-4xl font-bold'
    break
}
---

{
  level === 'h1' ? (
    <h1 class={`${style} ${classStyle}`}>
      <slot />
    </h1>
  ) : null
}

{
  level === 'h2' ? (
    <h2 class={`${style} ${classStyle}`}>
      <slot />
    </h2>
  ) : null
}

{
  level === 'h3' ? (
    <h2 class={`${style} ${classStyle}`}>
      <slot />
    </h2>
  ) : null
}